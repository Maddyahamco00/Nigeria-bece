{
  "name": "nigeria-bece-portal",
  "version": "2.0.0",
  "description": "Enterprise-grade BECE Management System with microservices architecture, GraphQL API, and advanced DevOps",
  "main": "dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t nigeria-bece .",
    "docker:run": "docker run -p 3000:3000 nigeria-bece",
    "k8s:deploy": "kubectl apply -f k8s/",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "docs:api": "swagger-jsdoc -d swaggerDef.js src/**/*.ts -o docs/api.json",
    "security:audit": "npm audit && npx audit-ci --config audit-ci.json",
    "performance:test": "artillery run performance-test.yml",
    "setup": "node scripts/seedDatabase.js",
    "seed-subjects": "node scripts/seedSubjects.js",
    "create-admin": "node scripts/createSuperAdmin.js",
    "fix-admin": "node scripts/fixAdmin.js",
    "export-data": "node scripts/exportData.js"
  },
  "author": "Muhammad Kabir Ahmad ( Maddy)",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/passport": "^1.0.16",
    "@types/sequelize": "^4.28.19",
    "apollo-server-express": "^3.13.0",
    "artillery": "^2.0.8",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.0",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.0",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "paystack-api": "^2.0.6",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.20",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/passport": "^1.0.16",
    "@types/sequelize": "^4.28.19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "audit-ci": "^6.6.1",
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "jest": "./jest.config.ts"
}
