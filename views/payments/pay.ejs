<!-- views/payments/payment_page.ejs -->
<%- include('../layout/main') %>
<div class="container py-5">
  <h1 class="h3">Payment Page</h1>
  <form action="/pay" method="POST">
    <label>Name:</label>
    <input type="text" name="name" required><br><br>
    
    <label>Email:</label>
    <input type="email" name="email" required><br><br>

    <label>Guardian Number:</label>
    <input type="text" name="guardian_number" required><br><br>

    <label>Amount:</label>
    <input type="number" name="amount" value="5000" readonly><br><br>

    <button type="submit">Pay Now</button>
  </form>
 </div>