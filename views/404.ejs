<!--views/404.ejs-->

<main class="d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-5 text-center bg-white rounded w-100" style="max-width: 500px;">
    <h1 class="text-danger mb-3">404</h1>
    <p class="mb-4">The page you are looking for does not exist.</p>
    <% if (typeof requested !== 'undefined') { %>
      <p class="text-muted small">Requested: <strong><%= requested %></strong></p>
    <% } %>
    <a href="/" class="btn btn-primary">Back to Home</a>
  </div>
</main>