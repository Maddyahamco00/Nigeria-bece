<!-- views/students/dashboard.ejs -->

<main class="d-flex" style="background: linear-gradient(135deg, #f8f9fa, #f1f5f9); min-height: 100vh;">

  <!-- Sidebar -->
  <aside id="sidebar" class="bg-white shadow-sm border-end p-3 d-none d-md-block" style="width: 260px;">
    <h5 class="fw-bold text-primary mb-3">Dashboard</h5>
    <ul class="nav flex-column">
  <li class="nav-item"><a href="/students/dashboard" class="nav-link"><i class="bi bi-speedometer2 me-2"></i> Overview</a></li>
  <li class="nav-item"><a href="/students/profile" class="nav-link"><i class="bi bi-person-circle me-2"></i> Profile</a></li>
  <li class="nav-item"><a href="/students/results" class="nav-link"><i class="bi bi-bar-chart-line me-2"></i> Results</a></li>
  <li class="nav-item"><a href="/students/payments" class="nav-link"><i class="bi bi-credit-card me-2"></i> Payments</a></li>
  <li class="nav-item"><a href="/auth/logout" class="nav-link text-danger"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
</ul>

  </aside>

  <!-- Main Content -->
  <div class="flex-grow-1 p-4">

    <!-- Welcome -->
    <div class="mb-4">
      <h2 class="fw-bold text-primary">Welcome, <%= student.name %> ðŸ‘‹</h2>
      <p class="text-muted">Here's your latest information and updates.</p>
    </div>

    <!-- Info Cards -->
    <div class="row g-4">

      <!-- Registration Info -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-4">
          <div class="card-body">
            <h5 class="fw-bold text-primary mb-3"><i class="bi bi-card-list me-2"></i> Registration Info</h5>
            <p><strong>Reg. Number:</strong> <%= student.regNumber %></p>
            <p><strong>School:</strong> <%= student.School ? student.School.name : 'N/A' %></p>
            <p><strong>State:</strong> <%= student.State ? student.State.name : 'N/A' %></p>
            <p><strong>LGA:</strong> <%= student.LGA ? student.LGA.name : 'N/A' %></p>
          </div>
        </div>
      </div>

      <!-- Payments -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-4">
          <div class="card-body">
            <h5 class="fw-bold text-primary mb-3"><i class="bi bi-credit-card-2-front me-2"></i> Payments</h5>
            <% if (student.paymentStatus && student.paymentStatus.toLowerCase() === 'paid') { %>
              <div class="alert alert-success d-flex align-items-center">
                <i class="bi bi-check-circle-fill me-2"></i> Payment Completed
              </div>
            <% } else { %>
              <div class="alert alert-warning d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Pending Payment
              </div>
              <a href="/payment" class="btn btn-primary btn-sm rounded-pill mt-2">Make Payment</a>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Results -->
      <div class="col-md-12">
        <div class="card border-0 shadow-sm rounded-4">
          <div class="card-body">
            <h5 class="fw-bold text-primary mb-3"><i class="bi bi-bar-chart-fill me-2"></i> Results</h5>
            <% if (results && results.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Subject</th>
                      <th>Score</th>
                      <th>Grade</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% results.forEach(r => { %>
                      <tr>
                        <td><%= r.subject %></td>
                        <td><%= r.score %></td>
                        <td>
                          <% if (r.score >= 70) { %>
                            <span class="badge bg-success">A</span>
                          <% } else if (r.score >= 60) { %>
                            <span class="badge bg-info">B</span>
                          <% } else if (r.score >= 50) { %>
                            <span class="badge bg-warning">C</span>
                          <% } else { %>
                            <span class="badge bg-danger">F</span>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted">No results available yet.</p>
            <% } %>
          </div>
        </div>
      </div>

    </div>
  </div>
</main>
