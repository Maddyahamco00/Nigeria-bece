<!-- views/students/results.ejs -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4><i class="fas fa-graduation-cap"></i> BECE Results - <%= student.name %></h4>
        </div>
        <div class="card-body">
          <% if (results && results.length > 0) { %>
            <div class="row mb-4">
              <div class="col-md-6">
                <p><strong>Student Code:</strong> <%= student.studentCode || student.regNumber %></p>
                <p><strong>School:</strong> <%= student.School?.name || 'N/A' %></p>
                <p><strong>State:</strong> <%= student.State?.name || 'N/A' %></p>
              </div>
              <div class="col-md-6">
                <p><strong>Exam Year:</strong> <%= new Date().getFullYear() %></p>
                <p><strong>Result Status:</strong> 
                  <span class="badge badge-success">Published</span>
                </p>
              </div>
            </div>

            <div class="table-responsive">
              <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                  <tr>
                    <th>Subject</th>
                    <th>Score</th>
                    <th>Grade</th>
                    <th>Remark</th>
                  </tr>
                </thead>
                <tbody>
                  <% results.forEach(result => { %>
                    <tr>
                      <td><%= result.subject %></td>
                      <td><%= result.score %></td>
                      <td>
                        <span class="badge badge-<%= getGradeBadge(getGrade(result.score)) %>">
                          <%= getGrade(result.score) %>
                        </span>
                      </td>
                      <td><%= getGradeRemark(getGrade(result.score)) %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

            <div class="row mt-4">
              <div class="col-md-12 text-center">
                <button class="btn btn-primary" onclick="window.print()">
                  <i class="fas fa-print"></i> Print Results
                </button>
                <a href="/students/dashboard" class="btn btn-secondary ml-2">
                  <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
              </div>
            </div>
          <% } else { %>
            <div class="alert alert-info text-center">
              <h5><i class="fas fa-info-circle"></i> Results Not Available</h5>
              <p>Your BECE results have not been published yet. Please check back later.</p>
              <a href="/students/dashboard" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

