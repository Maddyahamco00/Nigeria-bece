<!-- views/students/payments.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-credit-card me-3"></i>
        My Payments
      </h2>
      <p class="dashboard-subtitle">View your payment history and status</p>
    </div>

    <!-- Payment Status Card -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
      <div class="card-body text-center py-4">
        <% if (student.paymentStatus === 'Paid') { %>
          <div class="text-success mb-3">
            <i class="fas fa-check-circle fa-3x"></i>
          </div>
          <h4 class="text-success">Payment Complete</h4>
          <p class="text-muted">Your examination fee has been paid successfully</p>
          <span class="badge bg-success fs-6 px-3 py-2">PAID</span>
        <% } else { %>
          <div class="text-warning mb-3">
            <i class="fas fa-exclamation-circle fa-3x"></i>
          </div>
          <h4 class="text-warning">Payment Pending</h4>
          <p class="text-muted">Please complete your examination fee payment</p>
          <a href="/payment" class="btn btn-primary btn-lg">
            <i class="fas fa-credit-card me-2"></i>
            Pay Now
          </a>
        <% } %>
      </div>
    </div>

    <!-- Payment History -->
    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-history me-2"></i>
          Payment History
        </h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Date</th>
                <th>Reference</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Method</th>
              </tr>
            </thead>
            <tbody>
              <% if (payments && payments.length > 0) { %>
                <% payments.forEach(payment => { %>
                  <tr>
                    <td><%= new Date(payment.createdAt).toLocaleDateString() %></td>
                    <td><%= payment.reference %></td>
                    <td>â‚¦<%= payment.amount.toLocaleString() %></td>
                    <td>
                      <span class="badge bg-<%= payment.status === 'success' ? 'success' : payment.status === 'pending' ? 'warning' : 'danger' %>">
                        <%= payment.status.toUpperCase() %>
                      </span>
                    </td>
                    <td>Paystack</td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center text-muted py-4">
                    No payment records found
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>