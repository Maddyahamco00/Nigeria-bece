<!-- views/students/confirmation.ejs -->
<main class="d-flex align-items-center justify-content-center py-5" 
      style="background: linear-gradient(135deg, #f8f9fa, #e3f2fd); min-height: 100vh;">

  <div class="card shadow-lg border-0 rounded-4 p-4 w-100 text-center" style="max-width: 500px;">
    <div class="card-body">
      <img src="/images/logo.svg" alt="BECE Logo" class="mb-3" style="width: 70px;">
      <h2 class="fw-bold text-primary">Registration Complete!</h2>
      <p class="text-muted">Thank you, <%= student.name %>. Your registration and payment were successful.</p>

      <div class="alert alert-success mt-4">
        Your payment reference is: <strong><%= paymentRef %></strong>
      </div>

      <p class="mt-4">
        You can now log in to your student dashboard to view your details and results when they are released.
      </p>

      <a href="/auth/login" class="btn btn-primary btn-lg fw-bold shadow-sm rounded-pill mt-3">
        Go to Login
      </a>
    </div>
  </div>
</main>
