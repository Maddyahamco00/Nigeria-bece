<!-- views/admin/edit-school.ejs -->

<h2>Edit School</h2>

<form action="/admin/schools/edit/<%= school.id %>" method="POST">
  <label>School Name:</label>
  <input type="text" name="name" value="<%= school.name %>" required><br><br>

  <label>LGA ID:</label>
  <input type="number" name="lgaId" value="<%= school.lgaId %>" required><br><br>

  <label>State ID:</label>
  <input type="number" name="stateId" value="<%= school.stateId %>" required><br><br>

  <button type="submit">Update</button>
</form>

