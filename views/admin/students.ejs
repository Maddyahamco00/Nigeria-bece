<!-- views/admin/students.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-users me-3"></i>
        Manage Students
      </h2>
      <p class="dashboard-subtitle">View and manage all registered students</p>
    </div>

    <!-- Add Student Button -->
    <div class="mb-3 text-end">
      <a href="/students/register/biodata" class="btn btn-success">
        <i class="fas fa-user-plus me-2"></i> Add Student
      </a>
    </div>

    <!-- Students Table -->
    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Reg Number</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>School</th>
                <th>Payment</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach((student, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td class="fw-bold text-primary"><%= student.regNumber %></td>
                  <td><%= student.name %></td>
                  <td><%= student.email %></td>
                  <td><%= student.School ? student.School.name : 'N/A' %></td>
                  <td>
                    <% if ((student.paymentStatus || '').toLowerCase() === 'paid') { %>
                      <span class="badge bg-success">Paid</span>
                    <% } else { %>
                      <span class="badge bg-danger">Pending</span>
                    <% } %>
                  </td>
                  <td>
                    <a href="/admin/students/<%= student.id %>" class="btn btn-sm btn-primary">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/admin/students/<%= student.id %>/edit" class="btn btn-sm btn-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>