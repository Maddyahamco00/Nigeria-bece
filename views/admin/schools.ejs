<!-- views/admin/schools.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-school me-3"></i>
        Manage Schools
      </h2>
      <p class="dashboard-subtitle">View and manage all registered schools</p>
    </div>

    <!-- Add School Button -->
    <div class="mb-3 text-end">
      <a href="/admin/schools/add" class="btn btn-success">
        <i class="fas fa-plus me-2"></i> Add School
      </a>
    </div>

    <!-- Schools Table -->
    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>School Name</th>
                <th>State</th>
                <th>LGA</th>
                <th>Students</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% schools.forEach((school, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td class="fw-semibold text-primary"><%= school.name %></td>
                  <td><%= school.State ? school.State.name : 'N/A' %></td>
                  <td><%= school.LGA ? school.LGA.name : 'N/A' %></td>
                  <td>
                    <span class="badge bg-info text-dark">
                      <%= school.Students ? school.Students.length : 0 %>
                    </span>
                  </td>
                  <td>
                    <a href="/admin/schools/<%= school.id %>" class="btn btn-sm btn-primary">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/admin/schools/<%= school.id %>/edit" class="btn btn-sm btn-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>