<!--views/admin/schools/add.ejs-->

<div class="d-flex">
  <%- include('../../partials/sidebar') %>

  <div id="mainContent" class="flex-grow-1 ms-auto p-4" style="margin-left: 250px;">
    <h2 class="fw-bold text-primary mb-4">Add New School</h2>

    <form action="/admin/schools/add" method="POST" class="card shadow-sm border-0 rounded-4 p-4">
      <div class="mb-3">
        <label class="form-label">School Name</label>
        <input type="text" name="name" class="form-control" required />
      </div>

      <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" name="address" class="form-control" required />
      </div>

      <div class="mb-3">
        <label class="form-label">State</label>
        <select name="stateCode" class="form-select" required>
          <option value="">-- Select State --</option>
          <% states.forEach(state => { %>
            <option value="<%= state.code %>"><%= state.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">LGA</label>
        <select name="lgaId" class="form-select" required>
          <option value="">-- Select LGA --</option>
          <% lgas.forEach(lga => { %>
            <option value="<%= lga.id %>"><%= lga.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">School Serial</label>
        <input type="text" name="schoolSerial" class="form-control" placeholder="Optional" />
      </div>

      <div class="text-end">
        <button type="submit" class="btn btn-primary">Save School</button>
      </div>
    </form>
  </div>
</div>
