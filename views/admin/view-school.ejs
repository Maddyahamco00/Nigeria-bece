<!-- views/admin/view-school.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-school me-3"></i>
        School Details
      </h2>
      <p class="dashboard-subtitle">View school information and enrolled students</p>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h4><i class="fas fa-school"></i> <%= school.name %></h4>
            <a href="/admin/schools/<%= school.id %>/edit" class="btn btn-light btn-sm">
              <i class="fas fa-edit"></i> Edit School
            </a>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h5>School Information</h5>
                <table class="table table-borderless">
                  <tr>
                    <td><strong>Name:</strong></td>
                    <td><%= school.name %></td>
                  </tr>
                  <tr>
                    <td><strong>Address:</strong></td>
                    <td><%= school.address || 'N/A' %></td>
                  </tr>
                  <tr>
                    <td><strong>State:</strong></td>
                    <td><%= school.State ? school.State.name : 'N/A' %></td>
                  </tr>
                  <tr>
                    <td><strong>LGA:</strong></td>
                    <td><%= school.LGA ? school.LGA.name : 'N/A' %></td>
                  </tr>
                  <tr>
                    <td><strong>Students:</strong></td>
                    <td><%= school.Students ? school.Students.length : 0 %></td>
                  </tr>
                </table>
              </div>
            </div>

            <% if (school.Students && school.Students.length > 0) { %>
              <hr>
              <h5>Enrolled Students</h5>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Gender</th>
                      <th>Reg Number</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% school.Students.forEach(student => { %>
                      <tr>
                        <td><%= student.name %></td>
                        <td><%= student.email || 'N/A' %></td>
                        <td><%= student.gender || 'N/A' %></td>
                        <td><%= student.regNumber || student.studentCode || 'N/A' %></td>
                        <td>
                          <a href="/admin/students/<%= student.id %>" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i>
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } %>

            <div class="text-center mt-4">
              <a href="/admin/schools" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Schools
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

