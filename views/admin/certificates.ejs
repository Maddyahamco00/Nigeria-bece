<!-- views/admin/certificates.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-certificate me-3"></i>
        Digital Certificates
      </h2>
      <p class="dashboard-subtitle">Generate and manage student certificates</p>
    </div>

    <!-- Generate Certificate -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-plus me-2"></i>
          Generate New Certificate
        </h5>
      </div>
      <div class="card-body">
        <form action="/admin/certificates/generate" method="POST" class="row g-3">
          <div class="col-md-6">
            <label class="form-label fw-bold">Student</label>
            <select name="studentId" class="form-control" required>
              <option value="">Select Student</option>
              <% if (students && students.length > 0) { %>
                <% students.forEach(student => { %>
                  <option value="<%= student.id %>"><%= student.name %> (<%= student.regNumber %>)</option>
                <% }) %>
              <% } %>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label fw-bold">Exam Year</label>
            <select name="examYear" class="form-control" required>
              <% const currentYear = new Date().getFullYear(); %>
              <% for (let i = 0; i < 5; i++) { %>
                <option value="<%= currentYear - i %>" <%= i === 0 ? 'selected' : '' %>>
                  <%= currentYear - i %>
                </option>
              <% } %>
            </select>
          </div>
          <div class="col-md-3">
            <button type="submit" class="btn btn-primary mt-4">
              <i class="fas fa-certificate me-2"></i>
              Generate Certificate
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Certificates List -->
    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-header bg-transparent border-0">
        <h5 class="fw-bold mb-0">
          <i class="fas fa-list me-2"></i>
          Generated Certificates
        </h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Certificate No.</th>
                <th>Student</th>
                <th>Exam Year</th>
                <th>Issue Date</th>
                <th>Status</th>
                <th>Downloads</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (certificates && certificates.length > 0) { %>
                <% certificates.forEach(cert => { %>
                  <tr>
                    <td><strong><%= cert.certificateNumber %></strong></td>
                    <td><%= cert.Student?.name || 'N/A' %></td>
                    <td><%= cert.examYear %></td>
                    <td><%= new Date(cert.issueDate).toLocaleDateString() %></td>
                    <td>
                      <span class="badge bg-<%= cert.status === 'issued' ? 'success' : cert.status === 'pending' ? 'warning' : 'info' %>">
                        <%= cert.status.toUpperCase() %>
                      </span>
                    </td>
                    <td>
                      <span class="badge bg-secondary"><%= cert.downloadCount %> times</span>
                    </td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary" title="Download">
                        <i class="fas fa-download"></i>
                      </button>
                      <button class="btn btn-sm btn-outline-info" title="Preview">
                        <i class="fas fa-eye"></i>
                      </button>
                      <button class="btn btn-sm btn-outline-success" title="Send to Student">
                        <i class="fas fa-paper-plane"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center text-muted py-4">
                    No certificates generated yet. Generate your first certificate above.
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>