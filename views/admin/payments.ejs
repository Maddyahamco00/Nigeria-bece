<!-- views/admin/payments.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-credit-card me-3"></i>
        Manage Payments
      </h2>
      <p class="dashboard-subtitle">View and manage student payment records</p>
    </div>

    <!-- Export Button -->
    <div class="mb-3 text-end">
      <a href="/admin/export/payments" class="btn btn-success">
        <i class="fas fa-download me-2"></i> Export Payments
      </a>
    </div>

    <!-- Payments Table -->
    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Student</th>
                <th>School</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Reference</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (payments && payments.length > 0) { %>
                <% payments.forEach((payment, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td class="fw-semibold text-primary"><%= payment.Student ? payment.Student.name : payment.email %></td>
                    <td><%= payment.School ? payment.School.name : 'N/A' %></td>
                    <td>â‚¦<%= payment.amount.toLocaleString() %></td>
                    <td>
                      <% if (payment.status === 'success') { %>
                        <span class="badge bg-success">Success</span>
                      <% } else if (payment.status === 'pending') { %>
                        <span class="badge bg-warning">Pending</span>
                      <% } else { %>
                        <span class="badge bg-danger">Failed</span>
                      <% } %>
                    </td>
                    <td><small class="text-muted"><%= payment.reference %></small></td>
                    <td><%= new Date(payment.createdAt).toLocaleDateString() %></td>
                    <td>
                      <button class="btn btn-sm btn-primary" onclick="viewPayment(<%= payment.id %>)">
                        <i class="fas fa-eye"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="8" class="text-center text-muted">No payments found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

