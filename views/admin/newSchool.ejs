<!-- views/admin/newSchool.ejs -->
<div class="dashboard-container">
  <%- include('../partials/sidebar') %>

  <div id="mainContent" class="main-content">
    <div class="welcome-header mb-4">
      <h2 class="dashboard-title">
        <i class="fas fa-school me-3"></i>
        Add New School
      </h2>
      <p class="dashboard-subtitle">Register a new school in the system</p>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body p-4">
            <% if (messages && messages.error) { %>
              <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <%= messages.error %>
              </div>
            <% } %>
            <% if (messages && messages.success) { %>
              <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <%= messages.success %>
              </div>
            <% } %>

            <form action="/admin/schools" method="POST">
              <div class="row">
                <div class="col-md-12 mb-3">
                  <label for="name" class="form-label fw-bold">
                    <i class="fas fa-school me-2"></i>School Name *
                  </label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Enter school name" required>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="stateId" class="form-label fw-bold">
                    <i class="fas fa-map-marker-alt me-2"></i>State *
                  </label>
                  <select class="form-control" id="stateId" name="stateId" required>
                    <option value="">Select State</option>
                    <% states.forEach(state => { %>
                      <option value="<%= state.id %>" data-code="<%= state.code %>"><%= state.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="lgaId" class="form-label fw-bold">
                    <i class="fas fa-map me-2"></i>LGA *
                  </label>
                  <select class="form-control" id="lgaId" name="lgaId" required>
                    <option value="">Select State First</option>
                  </select>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="schoolSerial" class="form-label fw-bold">
                    <i class="fas fa-hashtag me-2"></i>School Serial (Auto-generated)
                  </label>
                  <input type="number" class="form-control" id="schoolSerial" name="schoolSerial" placeholder="Auto-generated" readonly>
                  <input type="hidden" id="stateCode" name="stateCode">
                </div>
                <div class="col-md-6 mb-3">
                  <label for="address" class="form-label fw-bold">
                    <i class="fas fa-location-dot me-2"></i>Address *
                  </label>
                  <input type="text" class="form-control" id="address" name="address" placeholder="Enter school address" required>
                </div>
              </div>

              <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save me-2"></i>Save School
                </button>
                <a href="/admin/schools" class="btn btn-secondary">
                  <i class="fas fa-times me-2"></i>Cancel
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Load LGAs when state changes
document.getElementById('stateId').addEventListener('change', async function() {
  const stateId = this.value;
  const stateCode = this.options[this.selectedIndex].dataset.code;
  const lgaSelect = document.getElementById('lgaId');
  
  // Update hidden state code field
  document.getElementById('stateCode').value = stateCode;
  
  // Clear LGA options
  lgaSelect.innerHTML = '<option value="">Loading...</option>';
  
  if (stateId) {
    try {
      const response = await fetch(`/api/lgas/${stateId}`);
      const lgas = await response.json();
      
      lgaSelect.innerHTML = '<option value="">Select LGA</option>';
      lgas.forEach(lga => {
        lgaSelect.innerHTML += `<option value="${lga.id}">${lga.name}</option>`;
      });
    } catch (error) {
      lgaSelect.innerHTML = '<option value="">Error loading LGAs</option>';
    }
  } else {
    lgaSelect.innerHTML = '<option value="">Select State First</option>';
  }
  
  generateSerial();
});

// Generate serial when LGA changes
document.getElementById('lgaId').addEventListener('change', generateSerial);

// Auto-generate school serial
async function generateSerial() {
  const stateId = document.getElementById('stateId').value;
  const lgaId = document.getElementById('lgaId').value;
  
  if (stateId && lgaId) {
    try {
      // Get count of schools in this LGA
      const response = await fetch(`/api/schools/${lgaId}`);
      const schools = await response.json();
      const nextSerial = schools.length + 1;
      
      document.getElementById('schoolSerial').value = nextSerial;
    } catch (error) {
      document.getElementById('schoolSerial').value = 1;
    }
  }
}
</script>