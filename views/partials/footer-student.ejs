<!-- views/partials/footer-student.ejs -->
<footer class="student-footer">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h6>Student Portal</h6>
        <p>Welcome <%= student && student.name ? student.name : 'Student' %>! Manage your BECE registration and view results.</p>
      </div>
      <div class="col-md-6 text-end">
        <div class="student-links">
          <a href="/students/dashboard">Dashboard</a>
          <a href="/students/profile">Profile</a>
          <a href="/students/results">Results</a>
          <a href="/students/payments">Payments</a>
        </div>
      </div>
    </div>
    <hr>
    <div class="text-center">
      <p>&copy; <%= new Date().getFullYear() %> Nigeria BECE Portal - Student Portal</p>
    </div>
  </div>
</footer>

<style>
.student-footer {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
  padding: 30px 0 15px;
  margin-top: auto;
}

.student-footer h6 {
  color: #ecf0f1;
  margin-bottom: 15px;
}

.student-links a {
  color: #ecf0f1;
  text-decoration: none;
  margin: 0 10px;
  padding: 5px 10px;
  border-radius: 5px;
  transition: all 0.3s;
}

.student-links a:hover {
  background: rgba(255,255,255,0.2);
  color: white;
}
</style>