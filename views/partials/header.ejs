<!-- views/partials/header.ejs-->
<header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
  <div class="container-fluid">
    <!-- Sidebar Toggle (mobile only)
    <button id="sidebarToggle" class="btn btn-outline-light d-lg-none me-2">
      <i class="bi bi-list"></i>
    </button>  -->

    <!-- Logo + Title -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/logo.svg" alt="Logo" class="me-2" style="height: 40px;">
      <span class="fw-bold">Nigeria BECE Admin by KASU/20/CSC/1134</span>
    </a>

    <!-- Mobile nav collapse toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto align-items-lg-center">
        <li class="nav-item d-flex align-items-center me-2">
          <!-- Theme toggle -->
          <button id="themeToggle" class="btn btn-outline-light btn-sm" title="Toggle theme">
            <i id="themeIcon" class="bi bi-moon-fill"></i>
          </button>
        </li>
          <% if (user) { %>
            <li class="nav-item">
              <a href="/admin/profile" class="nav-link">
                <i class="bi bi-person-circle me-1"></i> Profile
              </a>
            </li>
            <li class="nav-item">
              <a href="/auth/logout" class="nav-link">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
              </a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a href="/auth/login" class="nav-link">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
              </a>
            </li>
            <li class="nav-item">
              <a href="/auth/register" class="nav-link">
                <i class="bi bi-person-plus me-1"></i> Register
              </a>
            </li>
          <% } %>
        </ul>

        <!-- Mobile-only: include the sidebar links inside the navbar collapse so menu is unified on small screens -->
        <div class="d-md-none mt-3">
          <%- include('./sidebarLinks') %>
        </div>
      </ul>
    </div>
  </div>
</header>

<script>
  // Sidebar toggle for mobile
  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("sidebar");
    const toggle = document.getElementById("sidebarToggle");
    if (sidebar && toggle) {
      toggle.addEventListener("click", () => {
        sidebar.classList.toggle("open");
      });
    }
  });
</script>
