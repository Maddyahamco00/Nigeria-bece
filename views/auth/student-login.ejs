<!-- views/auth/student-login.ejs -->

<main class="d-flex align-items-center justify-content-center min-vh-100">
  <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
    <div class="card-body p-4">
      <h2 class="text-center fw-bold mb-4 text-primary">Student Login</h2>

      <% if (messages.error) { %>
        <div class="alert alert-danger py-2"><%= messages.error %></div>
      <% } %>
      <% if (messages.success) { %>
        <div class="alert alert-success py-2"><%= messages.success %></div>
      <% } %>

  <form action="/auth/student/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="regNumber" class="form-label">Registration Number</label>
          <input type="text" id="regNumber" name="regNumber" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">Student Login</button>
      </form>

      <p class="mt-3 text-center">
        <a href="/students/register/biodata" class="text-decoration-none">Register New Student</a> | 
        <a href="/auth/admin" class="text-decoration-none">Admin Login</a>
      </p>
    </div>
  </div>
</main>
