<!-- views/auth/login.ejs -->
<div class="login-selection-container">
  <div class="login-background"></div>
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-8">
        <div class="login-selection-card">
          <div class="login-header">
            <div class="logo-section">
              <img src="/images/logo.svg" alt="BECE Logo" class="login-logo">
              <div class="logo-glow"></div>
            </div>
            <h1 class="login-title">Nigeria BECE Portal</h1>
            <p class="login-subtitle">Choose your login type to continue</p>
          </div>
          
          <% if (messages.error) { %>
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-triangle"></i>
              <%= messages.error %>
            </div>
          <% } %>
          <% if (messages.success) { %>
            <div class="alert alert-success">
              <i class="fas fa-check-circle"></i>
              <%= messages.success %>
            </div>
          <% } %>
          <% if (logged_out) { %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle"></i>
              You have been logged out successfully.
            </div>
          <% } %>
          
          <div class="login-options">
            <div class="row g-4">
              <div class="col-md-6">
                <a href="/auth/admin" class="login-option-card admin-card">
                  <div class="option-icon">
                    <i class="fas fa-user-shield"></i>
                  </div>
                  <h3>Admin Login</h3>
                  <p>Access administrative dashboard and management tools</p>
                  <div class="option-arrow">
                    <i class="fas fa-arrow-right"></i>
                  </div>
                </a>
              </div>
              
              <div class="col-md-6">
                <a href="/auth/student/login" class="login-option-card student-card">
                  <div class="option-icon">
                    <i class="fas fa-graduation-cap"></i>
                  </div>
                  <h3>Student Login</h3>
                  <p>View your results, profile, and examination details</p>
                  <div class="option-arrow">
                    <i class="fas fa-arrow-right"></i>
                  </div>
                </a>
              </div>
            </div>
          </div>
          
          <div class="login-footer">
            <div class="row text-center">
              <div class="col-md-6">
                <p class="footer-text">
                  New student? <a href="/students/register/biodata" class="footer-link">Register Here</a>
                </p>
              </div>
              <div class="col-md-6">
                <p class="footer-text">
                  <a href="/auth/forgot-password" class="footer-link">Forgot Password?</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
