<!-- views/auth/admin-login.ejs -->
 
<main class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
    <div class="card-body p-4">
      <h2 class="text-center fw-bold mb-4 text-primary">Admin Login</h2>

      <% if (messages.error) { %>
        <div class="alert alert-danger py-2"><%= messages.error %></div>
      <% } %>

      <form action="/auth/admin" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">Admin Login</button>
      </form>

      <p class="mt-3 text-center">
        <a href="/auth/student/login" class="text-decoration-none">Student Login</a> | 
        <a href="/public" class="text-decoration-none">Public Site</a>
      </p>
    </div>
  </div>
</main>
